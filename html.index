<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>A Message for Avinya</title>
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@600&family=Quicksand:wght@400;500&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.6.0/dist/confetti.browser.min.js"></script>
    <style>
        :root {
            --bg-color: #fff5f7;
            --accent-color: #ffb7c5;
            --heart-color: #ff4d6d;
            --text-color: #5a4a4a;
            --paper-color: #ffffff;
        }

        body {
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            background-color: var(--bg-color);
            font-family: 'Quicksand', sans-serif;
            overflow: hidden;
            color: var(--text-color);
        }

        /* Heart Beating Animation */
        @keyframes heartbeat {
            0% { transform: translateX(-50%) scale(1); }
            15% { transform: translateX(-50%) scale(1.3); }
            30% { transform: translateX(-50%) scale(1); }
            45% { transform: translateX(-50%) scale(1.15); }
            60% { transform: translateX(-50%) scale(1); }
        }

        @keyframes float {
            0% { transform: translateY(0px); }
            50% { transform: translateY(-10px); }
            100% { transform: translateY(0px); }
        }

        @keyframes popIn {
            0% { transform: scale(0.8); opacity: 0; }
            70% { transform: scale(1.05); opacity: 1; }
            100% { transform: scale(1); opacity: 1; }
        }

        .hearts {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            pointer-events: none;
        }

        /* Envelope Styling */
        .envelope-wrapper {
            position: relative;
            cursor: pointer;
            z-index: 10;
        }

        .envelope {
            position: relative;
            width: 280px;
            height: 180px;
            background: var(--accent-color);
            border-bottom-left-radius: 10px;
            border-bottom-right-radius: 10px;
            box-shadow: 0 15px 35px rgba(255, 183, 197, 0.4);
        }

        .envelope::before {
            content: '';
            position: absolute;
            top: 0;
            z-index: 2;
            border-left: 140px solid transparent;
            border-right: 140px solid transparent;
            border-top: 100px solid #ff9ead;
            transform-origin: top;
            transition: transform 0.5s 0.2s;
        }

        .envelope-wrapper.open .envelope::before {
            transform: rotateX(180deg);
            z-index: 0;
        }

        /* The Heart Seal */
        .heart-seal {
            position: absolute;
            top: 70px;
            left: 50%;
            transform: translateX(-50%);
            z-index: 5;
            font-size: 50px;
            filter: drop-shadow(0 4px 8px rgba(0,0,0,0.2));
            animation: heartbeat 1.5s infinite ease-in-out;
            transition: 0.5s;
            user-select: none;
        }

        .envelope-wrapper.open .heart-seal {
            opacity: 0;
            pointer-events: none;
        }

        /* Paper Slides */
        #letter-container {
            display: none;
            width: 90%;
            max-width: 420px;
            animation: popIn 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        }

        .paper {
            background: var(--paper-color);
            padding: 40px 30px;
            border-radius: 15px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.08);
            min-height: 350px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            position: relative;
            border: 2px solid #fff0f3;
            animation: float 4s ease-in-out infinite;
        }

        .slide { display: none; }
        .slide.active { display: block; animation: popIn 0.5s ease-out forwards; }

        h1 { font-family: 'Dancing Script', cursive; font-size: 2.5rem; margin-bottom: 20px; color: #d48191; }
        p { line-height: 1.8; font-size: 1.15rem; margin: 10px 0; }

        .nav-buttons { margin-top: 30px; display: flex; gap: 20px; }
        button {
            background: var(--accent-color);
            border: none;
            padding: 10px 25px;
            border-radius: 25px;
            color: white;
            cursor: pointer;
            font-family: 'Quicksand', sans-serif;
            font-weight: bold;
            transition: all 0.3s;
            box-shadow: 0 4px 15px rgba(255, 183, 197, 0.4);
        }
        button:hover { background: #ff9ead; transform: translateY(-2px); }
    </style>
</head>
<body>

    <div class="hearts" id="hearts"></div>

    <div class="envelope-wrapper" id="envelope" onclick="openLetter()">
        <div class="envelope">
            <div class="heart-seal">‚ù§Ô∏è</div>
        </div>
        <p id="tap-text" style="text-align: center; margin-top: 25px; color: #d48191; font-weight: 500;">Tap the heart, Avinya</p>
    </div>

    <div id="letter-container">
        <div class="paper">
            <div class="slide active">
                <h1>üå∏ Hey Avinya.</h1>
                <p>This isn‚Äôt anything serious or dramatic.</p>
                <p>Just a small corner of the internet where a gentle thought decided to exist today...</p>
            </div>
            <div class="slide">
                <h1>‚ú®</h1>
                <p>You know how sometimes you meet someone, and without doing anything special, they make ordinary days feel a little brighter?</p>
            </div>
            <div class="slide">
                <h1>üå∑</h1>
                <p>Some people don‚Äôt even realize the effect they have. They just show up, be themselves, and leave impressions that linger quietly.</p>
            </div>
            <div class="slide">
                <h1>üåô</h1>
                <p>I think it‚Äôs rare and nice when conversations feel easy, and even silence feels comfortable instead of awkward.</p>
            </div>
            <div class="slide">
                <h1>üí´</h1>
                <p>This isn‚Äôt a message with hidden meanings. Just a simple reminder that being you, <strong>Avinya</strong>, exactly the way you are, is already more than enough.</p>
            </div>
            <div class="slide">
                <h1>üåº</h1>
                <p>Anyway‚Ä¶ If this made you smile even for a second, then it did what it was meant to do.</p>
                <p style="font-family: 'Dancing Script'; font-size: 1.8rem; color: #d48191;">‚Äî Yatin</p>
            </div>

            <div class="nav-buttons">
                <button id="prevBtn" onclick="changeSlide(-1)" style="visibility: hidden;">Back</button>
                <button id="nextBtn" onclick="changeSlide(1)">Next ‚Üí</button>
            </div>
        </div>
    </div>

    <script>
        let currentSlide = 0;
        const slides = document.querySelectorAll('.slide');
        const nextBtn = document.getElementById('nextBtn');
        const prevBtn = document.getElementById('prevBtn');

        function openLetter() {
            document.getElementById('envelope').classList.add('open');
            document.getElementById('tap-text').style.opacity = '0';
            
            confetti({
                particleCount: 150,
                spread: 70,
                origin: { y: 0.6 },
                colors: ['#ff4d6d', '#ffb7c5', '#ffffff']
            });

            setTimeout(() => {
                document.getElementById('envelope').style.display = 'none';
                document.getElementById('letter-container').style.display = 'block';
            }, 800);
        }

        function changeSlide(direction) {
            slides[currentSlide].classList.remove('active');
            currentSlide += direction;
            slides[currentSlide].classList.add('active');
            prevBtn.style.visibility = currentSlide === 0 ? 'hidden' : 'visible';
            
            if (currentSlide === slides.length - 1) {
                nextBtn.style.display = 'none';
                triggerFinalConfetti();
            } else {
                nextBtn.style.display = 'block';
            }
        }

        function triggerFinalConfetti() {
            var end = Date.now() + (3 * 1000);
            (function frame() {
                confetti({ particleCount: 3, angle: 60, spread: 55, origin: { x: 0 }, colors: ['#ff4d6d', '#ffb7c5'] });
                confetti({ particleCount: 3, angle: 120, spread: 55, origin: { x: 1 }, colors: ['#ff4d6d', '#ffb7c5'] });
                if (Date.now() < end) requestAnimationFrame(frame);
            }());
        }

        function createFlower() {
            const flower = document.createElement('div');
            flower.innerHTML = Math.random() > 0.5 ? 'üå∏' : 'üíó';
            flower.style.position = 'fixed';
            flower.style.left = Math.random() * 100 + 'vw';
            flower.style.top = '100vh';
            flower.style.fontSize = (Math.random() * 15 + 10) + 'px';
            flower.style.zIndex = "-1";
            flower.style.transition = `transform ${Math.random() * 4 + 3}s linear, opacity 2s`;
            document.getElementById('hearts').appendChild(flower);
            setTimeout(() => { flower.style.transform = `translateY(-110vh) rotate(${Math.random() * 360}deg)`; }, 100);
            setTimeout(() => { flower.remove(); }, 6000);
        }
        setInterval(createFlower, 400);
    </script>
</body>
</html>
